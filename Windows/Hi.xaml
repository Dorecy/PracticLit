<Window x:Class="PraktikaLitvinov.Windows.Hi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PraktikaLitvinov.Windows"
        mc:Ignorable="d"
        Title="Hi" Height="650" Width="1200" Background="Orange" Closing="Window_Closing" WindowStartupLocation="CenterScreen" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Добро пожаловать," FontSize="30"  />
        <TextBlock Name="bro" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" FontSize="30" />
        <Button Grid.Column="3" Background="Red" Content="Выйти" FontSize="50" Click="Button_Click" />

    </Grid>
</Window>
